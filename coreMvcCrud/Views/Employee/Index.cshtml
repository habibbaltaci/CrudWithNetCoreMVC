@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}
  <div class="row">
      <div class=col-md-10>
<h6>Repo Design Pattern</h6>
      </div>
      <div class="col-md-2">
          <a class="btn btn-primary" href="~/Employee/Create" role="button">Add Employee</a>
      </div>
  </div>

<div class="row">
    <table class="table table-striped table-hover">
    <thead class="bg-secondary text-white">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Sex</th>
            <th>Transactions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee e in Model)
        {
            <tr>
                <td>@e.Name</td>
                <td>@e.Age</td>
                <td>@e.Salary</td>
                <td>@e.Department</td>
                <td>@e.Sex</td>
                <td>
                <div class="btn-group">
                    <a class="btn btn-outline-secondary" asp-action="ViewRecord" asp-route-empname="@e.Name">View</a>
             
                    <a class="btn btn-outline-warning" asp-action="Update" asp-route-empname="@e.Name">Update</a>
               
                    <form asp-route-empname="@e.Name" asp-action="Delete" method="post" >
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
            

            </div>    
            </td>
                
            </tr>
        }
    </tbody>
</table>
</div>